{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "inlineSources": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": ["node"],
        "paths": {
            "*": [
                "node_modules/*",
                "core/types/*"
            ]
        }
    },
    "include": [
        "core/**/*"
    ]
}