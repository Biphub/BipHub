{
  "name": "fake1",
  "title": "Fake1",
  "description": "Fake realtime messaging application! Only exist in Biphub!",
  "url": "https://fake1.com",
  "icon": "app_icon.jpg",
  "styles": {
    "background-color": "rgb(30, 32, 35)"
  },
  "preparedConfig": {
    "token": ""
  },
  "podAuth": {
    "strategyType": "token",
    "properties": {
      "access_token": {
        "type": "string",
        "title": "Access Token"
      }
    }
  },
  "actions": {
    "post-fake-message": {
      "title": "Post to Channel",
      "description": "Posts a Message to a Channel",
      "trigger": "invoke",
      "styles": {
        "background-color": "#3b579d"
      },
      "config": {
        "properties": {
          "channel": {
            "type": "string",
            "oneOf": [
              {
                "$ref": "/rpcs/channels_list#channels/{id}"
              }
            ],
            "label": {
              "$ref": "/rpcs/channels_list#channels/{name}"
            },
            "title": "Channel ID"
          },
          "username": {
            "type": "string",
            "title": "Bot Name (optional)"
          }
        },
        "disposition": [
          "channel",
          "username"
        ]
      },
      "exports": {
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Response Status"
          }
        }
      },
      "imports": {
        "properties": {
          "text": {
            "type": "string",
            "title": "Message Text"
          }
        },
        "required": [
          "text"
        ],
        "disposition": [
          "text"
        ]
      }
    },
    "search-channel": {
      "title": "Search channel",
      "description": "Search everything in a given channel",
      "trigger": "invoke",
      "exports": {
        "properties": {
          "searchResults": {
            "type": "string",
            "title": "Search results"
          }
        }
      },
      "imports": {
        "properties": {
          "searchText": {
            "type": "string",
            "title": "Search string that might match anything"
          }
        }
      }
    },
    "deleteFakeMessage": {
      "title": "Delete fake message",
      "description": "Deletes a fake message using ID",
      "trigger": "invoke",
      "exports": {
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Result of deletion"
          }
        }
      },
      "imports": {
        "properties": {
          "messageId": {
            "type": "string",
            "title": "Id of message to delete"
          }
        }
      }
    },
    "incoming-hook" : {
      "title" : "Outgoing Web Hook Endpoint",
      "description" : "Receive A Message From A Slack Outgoing Webhook",
      "trigger" : "http",
      "imports" : {
        "properties" : {},
        "definitions" : {}
      },
      "config" : {
        "properties" : {},
        "definitions" : {}
      },
      "exports" : {
        "type" : "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "team_id": {
            "type": "string"
          },
          "team_domain": {
            "type": "string"
          },
          "service_id": {
            "type": "string"
          },
          "channel_id": {
            "type": "string"
          },
          "channel_name": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "user_name": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "trigger_word": {
            "type": "string"
          },
          "rawBody": {
            "type": "string"
          }
        }
      }
    }
  },
  "tags": [
    "messaging",
    "productivity"
  ]
}
