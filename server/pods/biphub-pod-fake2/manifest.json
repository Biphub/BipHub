{
  "name": "fake2",
  "title": "Fake app 2",
  "description": "Fake opensource repository service!",
  "url": "https://fake2.com",
  "icon": "app_icon.jpg",
  "trackDuplicates": true,
  "styles": {
    "background-color": "#ec7505"
  },
  "preparedConfig": {
    "token": ""
  },
  "auth": {
    "strategy": "token",
    "properties": {
      "access_token": {
        "type": "string",
        "title": "Access Token"
      }
    }
  },
  "rpcs": {
    "channels_list": {
      "contentType": "application/json",
      "title": "Get Channels"
    }
  },
  "actions": {
    "test-delete-issue": {
      "title": "Test delete an issue",
      "description": "Deletes an issue",
      "trigger": "invoke"
    },
    "create-move-issue": {
      "title": "Test move issue!",
      "description": "Test moving an issue!",
      "trigger": "invoke",
      "exports": {
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Response Status"
          }
        }
      },
      "imports": {
        "properties": {
          "reason": {
            "type": "string",
            "title": "Reason of moving the card"
          }
        }
      }
    },
    "create-fake-issue": {
      "title": "Create a fake issue",
      "description": "Posts a Message to a Channel",
      "trigger": "invoke",
      "config": {
        "properties": {
          "channel": {
            "type": "string",
            "oneOf": [
              {
                "$ref": "/rpcs/channels_list#channels/{id}"
              }
            ],
            "label": {
              "$ref": "/rpcs/channels_list#channels/{name}"
            },
            "title": "Channel ID"
          },
          "username": {
            "type": "string",
            "title": "Bot Name (optional)"
          }
        },
        "disposition": [
          "channel",
          "username"
        ]
      },
      "exports": {
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Response Status"
          }
        }
      },
      "imports": {
        "properties": {
          "title": {
            "type": "string",
            "title": "Issue title"
          },
          "description": {
            "type": "string",
            "title": "Description"
          }
        },
        "required": [
          "text"
        ],
        "disposition": [
          "text"
        ]
      }
    }
  },
  "tags": [
    "messaging",
    "productivity"
  ]
}
